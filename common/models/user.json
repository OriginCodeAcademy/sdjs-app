{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "username": {
      "type": "string"
    },
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "bio": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "company": {
      "type": "string"
    },
    "answers": {
      "type": {
        "question1": "string",
        "question2": "string",
        "question3": "string"
      }
    }
  },
  "validations": [],
  "relations": {
    "events": {
      "type": "hasMany",
      "model": "event",
      "foreignKey": "userId",
      "through": "attendee"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "emailAll": {
      "accepts": [
        {"arg": "req", "type": "object", "http": { "source": "req" }},
        {"arg": "res", "type": "object", "http": { "source": "res" }}
      ],
      "returns": [],
      "description": "test",
      "http": [
        {
          "path": "/email-all",
          "verb": "post"
        }
      ]
    }
  }
}
